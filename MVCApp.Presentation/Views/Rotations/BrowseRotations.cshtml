@model IEnumerable<MVCApp.Infrastructure.DTO.RotationDto>

<!-- Filters -->
<div class="row">
    <div class="col-lg-2">
        <h6 class="text-left"> Rotation type </h6>
        <select class="form-control form-control-sm my-3">
            <option> Master rotation </option>
            <option> Lab rotation </option>
            <option> Challenge rotation </option>
        </select>
        <h6 class="text-left"> Rotation slots </h6>
        <select class="form-control form-control-sm my-3">
            <option> 1 </option>
            <option> 2 </option>
            <option> 3 </option>
            <option> 4 </option>
            <option> 5 </option>
        </select>
        <button type="button" class="btn btn-default btn-primary mb-3"> Apply </button>
    </div>
    <!-- Cards -->
    <div class="col-lg-10">
        <!-- Group 1 -->

            @foreach (var rotation in Model)
            {
                <div class="card-group mb-1">
                     <div class="card">
                         <div class="card-body">
                             <h5 class="card-title">@rotation.Creator</h5>
                             <p class="card-text">@rotation.League</p>
                             <p class="card-text">@rotation.Spots</p>
                             <p class="card-text"><small class="text-muted">Created 3 mins ago</small></p>
                        </div>
                    </div>
                </div>
             }
     </div>
 </div>
<!-- Pagination -->
<div class="row py-2">
    <div class="col-lg-12 d-flex justify-content-end">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>