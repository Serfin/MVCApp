@using Newtonsoft.Json
@model IEnumerable<MVCApp.Common.ViewModels.RotationViewModel>

<script src="~/Scripts/BrowseRotations/pagination.js"></script>
<script src="~/Scripts/BrowseRotations/rotationsGrid.js"></script>

<!-- Filters -->
<div class="row">
    <div class="col-lg-2">
        <h6 class="text-left"> Rotation type </h6>
        <select class="form-control form-control-sm my-3">s
            <option> Master rotation </option>
            <option> Lab rotation </option>
            <option> Challenge rotation </option>
        </select>
        <h6 class="text-left"> Rotation slots </h6>
        <select class="form-control form-control-sm my-3">
            <option> 1 </option>
            <option> 2 </option>
            <option> 3 </option>
            <option> 4 </option>
            <option> 5 </option>
        </select>
        <button type="button" class="btn btn-default btn-primary mb-3"> Apply </button>
    </div>
    <!-- Cards -->
    <div class="col-lg-10" id="Rotations">
        <!-- Group 1 -->
        @if (Model != null)
        {
            <script>
                var models = @Html.Raw(JsonConvert.SerializeObject(Model));
                populateRotations(models);
            </script>
        }
    </div>
</div>
<!-- Pagination -->
<div class="row py-2">
    <div class="col-lg-12 d-flex justify-content-end">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" href="#" style="display: none;" onclick="pagePrev()" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                <li class="page-item">
                    <a class="page-link" onclick="getPage('btn1')" href="#">
                        <span class="btn1">1</span>
                    </a>
                </li>
                <li class="page-item">
                    <a class="page-link" onclick="getPage('btn2')" href="#">
                        <span class="btn2">2</span>
                    </a>
                </li>
                <li class="page-item">
                    <a class="page-link" onclick="getPage('btn3')" href="#">
                        <span class="btn3">3</span>
                    </a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#" onclick="pageNext()" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>
 